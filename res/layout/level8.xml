        android:id="@+id/penguinButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/penguinButton12"
        android:layout_alignTop="@+id/penguinButton15"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/penguin_16" />

    <ImageButton
        android:id="@+id/penguinButton17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/penguinButton16"
        android:layout_below="@+id/penguinButton15"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/penguinback" />

