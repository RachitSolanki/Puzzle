        android:layout_alignTop="@+id/penguinButton1"
        android:layout_toRightOf="@+id/penguinButton1"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/penguin_02" />

    <ImageButton
        android:id="@+id/penguinButton3"
        android:layout_width="wrap_content"
